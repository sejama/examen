{% extends 'base.html.twig' %}

{% block title %}Ciudad{% endblock %}

{% block body %}
    <h1>Ciudad</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ciudad.id }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ ciudad.descripcion }}</td>
            </tr>
            <tr>
                <th>Provincia</th>
                <td>{{ ciudad.provincia.descripcion }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('app_ciudad_index') }}" role="button">Volver</a>
    <a class="btn btn-primary" href="{{ path('app_ciudad_edit', {'id': ciudad.id}) }}" role="button">Editar</a>

    {{ include('ciudad/_delete_form.html.twig') }}
{% endblock %}
